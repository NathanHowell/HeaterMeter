<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/connection_header">

        <org.alienz.heatermeter.ui.settings.EditUrlPreference
            app:key="server_url"
            app:title="@string/server_url"
            />

        <EditTextPreference
            app:key="server_username"
            app:title="@string/server_username"
            app:defaultValue="root"
            app:useSimpleSummaryProvider="true"
            />

        <EditTextPreference
            app:key="server_password"
            app:title="@string/server_password"
            />

    </PreferenceCategory>

</PreferenceScreen>